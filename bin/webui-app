#!/usr/bin/perl -w

# --------------------------------------------------------------------------
# Required modules

use utf8;
use strict;
use warnings;
use Plack::Builder;
use EOSN::App::Validate;
use Plack::App::File;

binmode(STDOUT, ":utf8");

# --------------------------------------------------------------------------
# App

builder {
	mount '/res' => Plack::App::File->new (root => $ENV{EOSN_WEBPAGE_WEB} . '/res/')->to_app;
	mount '/' => EOSN::App::Validate->new->to_app;
};
